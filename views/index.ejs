<!DOCTYPE html>
<html lang="en">
<head>
   <link rel="stylesheet" href="static/style.css">
</head>
<body>
   
   <button id="btn">
      Reboot
   </button>
   <textarea id="message_box">
      e
   </textarea>
   <button id="txtbtn">
      submit
   </button>
   <div>
      <h3>
         CPU status
      </h3>
      <table>
         <tr>
            <th>Brand</th>
            <td><%- JSON.stringify(cpu.brand) %></td>
         </tr>
         <tr>
            <th>Temp</th>
            <td></td>
         </tr>
      </table>
   </div>

   <div>
      <h3>
         Network status
      </h3>
   </div>

   <div>
      <h3>
         Operating system
      </h3>
   </div>

   <script>
      document.getElementById("btn").onclick = async () => {
         await fetch("/reboot", {
            method: "HEAD"
         });
      };
      document.getElementById("txtbtn").onclick = async () => {
         var cmd = document.getElementById("message_box").value;
         output = await fetch("/execute?cmd=" + cmd, {
            method: "HEAD"
         });
         console.log(output)
      };
      
   </script>
</body>
</html>

